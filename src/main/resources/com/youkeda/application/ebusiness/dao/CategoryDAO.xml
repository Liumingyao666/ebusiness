<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youkeda.application.ebusiness.dao.CategoryDAO">
    <resultMap id="categoryResultMap" type="com.youkeda.application.ebusiness.dataobject.CategoryDO">
        <id property="id" column="id"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="parent_category_id" property="parentCategoryId"/>
    </resultMap>

    <insert id="insert" parameterType="com.youkeda.application.ebusiness.dataobject.CategoryDO" useGeneratedKeys="true" keyProperty="id">
        insert into category (gmt_created, gmt_modified, name, description, parent_category_id)
        values (now(), now(), #{name}, #{description}, #{parentCategoryId})
    </insert>

    <select id="selectAll" resultMap="categoryResultMap">
        select * from category
    </select>

    <select id="selectByParentIds" resultMap="categoryResultMap">
        select * from category
        <where>
            id in
            <foreach collection="ids" item="it" index="index" open="(" separator="," close=")">
                #{it}
            </foreach>
        </where>
    </select>

    <select id="selectByParentId" resultMap="categoryResultMap">
        select * from category where parent_category_id = #{id}
    </select>

    <select id="get" resultMap="categoryResultMap">
        select * from category where id = #{id}
    </select>

    <update id="update" parameterType="com.youkeda.application.ebusiness.dataobject.CategoryDO">
        update category
        <set>
            <if test="name != null">
                name = #{name}
            </if>
            <if test="description != null">
                description = #{description}
            </if>
            <if test="parentCategoryId != null">
                parent_category_id = #{parentCategoryId}
            </if>
            gmt_modified = now()
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from category where id = #{id}
    </delete>
</mapper>