<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youkeda.application.ebusiness.dao.ProductDAO">
    <resultMap id="BaseResultMap" type="com.youkeda.application.ebusiness.dataobject.ProductDO">
        <result column="id" property="id"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="images" property="images"/>
        <result column="detail" property="detail"/>
        <result column="status" property="status"/>
        <result column="category_ids" property="categoryIds"/>
        <result column="price" property="price"/>
        <result column="stock" property="stock"/>
    </resultMap>

    <insert id="insert" parameterType="com.youkeda.application.ebusiness.dataobject.ProductDO" useGeneratedKeys="true" keyProperty="id">
        insert into product (gmt_created, gmt_modified, user_id, `name`, description, images, detail, status, category_ids, price, stock)
        values (now(), now(), #{userId}, #{name}, #{description}, #{images}, #{detail}, #{status}, #{categoryIds}, #{price}, #{stock})
    </insert>

    <select id="selectByName" resultMap="BaseResultMap">
        select * from product where name = #{name}
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        select * from product where id = #{id}
    </select>

    <update id="updateStock" parameterType="com.youkeda.application.ebusiness.dataobject.ProductDO">
        update product
        <set>
            <if test="stock != null">
                stock = #{stock} - 1
            </if>
            gmt_modified = now()
        </set>
        where id = #{id}
    </update>

    <select id="selectAllCounts" resultMap="BaseResultMap">
        select * from product
    </select>

    <select id="pageQuery" parameterType="com.youkeda.application.ebusiness.param.BasePageParam" resultMap="BaseResultMap">
        select * from product
        limit #{pagination}, #{pageSize}
    </select>
</mapper>
